# User API routes
GET		/api/v1/users	      				controllers.UserController.getAll
+nocsrf
POST	/api/v1/users						controllers.UserController.create
PUT		/api/v1/users						controllers.UserController.update

# not in usage yet
GET		/api/v1/users/verify/:id			controllers.UserController.verify(id : Long)
GET		/api/v1/users/reset					controllers.UserController.reset

# Login/Logout API routes
+nocsrf
POST	/api/v1/login						controllers.LogController.login
POST	/api/v1/logout						controllers.LogController.logout


# Bid API routes
GET		/api/v1/bids						controllers.BidController.getAll
GET		/api/v1/bids/:id					controllers.BidController.get(id : Long)
POST	/api/v1/bids						controllers.BidController.create
PUT		/api/v1/bids						controllers.BidController.update
DELETE	/api/v1/bids						controllers.BidController.delete


# Wishlist API routes
GET		/api/v1/wishlists					controllers.WishlistController.getAll
GET		/api/v1/wishlists/:id				controllers.WishlistController.get(id : Long)
POST	/api/v1/wishlists					controllers.WishlistController.create
PUT		/api/v1/wishlists					controllers.WishlistController.update
DELETE	/api/v1/wishlists					controllers.WishlistController.delete


# Sale API routes
GET		/api/v1/sales						controllers.SaleController.getAll
GET		/api/v1/sales/:id					controllers.SaleController.get(id : Long)
POST	/api/v1/sales						controllers.SaleController.create
PUT		/api/v1/sales						controllers.SaleController.update
DELETE	/api/v1/sales						controllers.SaleController.delete


# Product API routes
GET		/api/v1/products					controllers.ProductController.getAll
GET		/api/v1/products/:id				controllers.ProductController.get(id : Long)
GET		/api/v1/products/:id/bids			controllers.ProductController.bids(id : Long)
POST	/api/v1/products					controllers.ProductController.create
PUT		/api/v1/products					controllers.ProductController.update
DELETE	/api/v1/products					controllers.ProductController.delete


# Category API routes
GET		/api/v1/category					controllers.CategoryController.getAll
