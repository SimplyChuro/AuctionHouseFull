# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /          					controllers.HomeController.index
        
# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)


# User routes
GET     /users/api        				controllers.UserController.userList
GET		/users/form						controllers.UserController.createOneUser
GET     /users/:id         				controllers.UserController.getOneUser(id : Long)
GET     /users/edit/:id					controllers.UserController.editUser(id : Long)
PATCH	/users/edit						controllers.UserController.updateUser
POST	/users/form						controllers.UserController.save

# Product routes
GET     /products/api          			controllers.ProductController.productList
GET		/products/form					controllers.ProductController.createOneProduct
GET     /products/:id         			controllers.ProductController.getOneProduct(id : Long)
GET     /products/edit/:id				controllers.ProductController.editProduct(id : Long)
PATCH	/products/edit					controllers.ProductController.updateProduct
POST	/products/form					controllers.ProductController.save