# User API routes
GET		/apiv1/users		      			controllers.UserController.userList
GET		/apiv1/users/verifyMail/:id			controllers.UserController.verifyEmail(id : Long)

POST	/apiv1/users/login					controllers.UserController.login
POST	/apiv1/users/create					controllers.UserController.create
PUT		/apiv1/users/update					controllers.UserController.update

POST	/apiv1/users/bid/create				controllers.UserController.createBid
PUT		/apiv1/users/bid/update				controllers.UserController.updateBid
DELETE	/apiv1/users/bid/delete				controllers.UserController.deleteBid

POST	/apiv1/users/wishlist/create		controllers.UserController.createWishlist
PUT		/apiv1/users/wishlist/update		controllers.UserController.updateWishlist
DELETE	/apiv1/users/wishlist/delete		controllers.UserController.deleteWishlist

POST	/apiv1/users/sale/create			controllers.UserController.createSale
PUT		/apiv1/users/sale/update			controllers.UserController.updateSale
DELETE	/apiv1/users/sale/delete			controllers.UserController.deleteSale


# Product API routes
GET		/apiv1/products						controllers.ProductController.productList
GET		/apiv1/products/bids/:id			controllers.ProductController.productBids(id : Long)

POST	/apiv1/create						controllers.ProductController.create
PUT		/apiv1/update						controllers.ProductController.update
DELETE	/apiv1/delete						controllers.ProductController.delete

GET		/apiv1/category						controllers.ProductController.categoryList
GET		/apiv1/category/:id					controllers.ProductController.subCategoryList(id : Long)
POST	/apiv1/category/create				controllers.ProductController.createCategory


