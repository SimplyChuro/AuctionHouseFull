# User API routes
GET		/api/v1/users		      			controllers.UserController.users
GET		/api/v1/users/verifyMail/:id		controllers.UserController.verify(id : Long)

POST	/api/v1/users/login					controllers.UserController.login
POST	/api/v1/users/create				controllers.UserController.create
PUT		/api/v1/users/update				controllers.UserController.update

POST	/api/v1/users/bid/create			controllers.BidController.create
PUT		/api/v1/users/bid/update			controllers.BidController.update
DELETE	/api/v1/users/bid/delete			controllers.BidController.delete

POST	/api/v1/users/wishlist/create		controllers.WishlistController.create
PUT		/api/v1/users/wishlist/update		controllers.WishlistController.update
DELETE	/api/v1/users/wishlist/delete		controllers.WishlistController.delete

POST	/api/v1/users/sale/create			controllers.SaleController.create
PUT		/api/v1/users/sale/update			controllers.SaleController.update
DELETE	/api/v1/users/sale/delete			controllers.SaleController.delete


# Product API routes
GET		/api/v1/products					controllers.ProductController.products
GET		/api/v1/products/:id				controllers.ProductController.product(id : Long)
GET		/api/v1/products/:id/bids			controllers.ProductController.bids(id : Long)

POST	/api/v1/products/create				controllers.ProductController.create
PUT		/api/v1/products/update				controllers.ProductController.update
DELETE	/api/v1/products/delete				controllers.ProductController.delete

POST	/api/v1/category/create				controllers.CategoryController.create
PUT		/api/v1/category/update				controllers.CategoryController.update
DELETE	/api/v1/category/delete				controllers.CategoryController.delete

GET		/api/v1/category					controllers.CategoryController.categories
GET		/api/v1/category/:id				controllers.CategoryController.category(id : Long)


