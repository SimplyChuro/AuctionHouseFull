{{app-header}}

<div class="container-fluid current-route-background">
  <div class="container">
    <p class="form-title-text">LOGIN</p>
  </div>
</div>

<div class="container-fluid pt-4">
  <div class="container">
    <div class="row fade">
      <div class="col-2"></div>
      <div class="col-8">
        <div class="card margin-card">
          <h1 class="card-title">LOGIN</h1>
          <div class="card-body mr-4 ml-4">
            <form>
              <div class="form-group mt-4">
                <label >Enter Email</label>
                {{input type="email" value=emailAddress class="form-control form-background-color p-4"}}
              </div>
              <div class="form-group mt-5">
                <label>Password</label>
                {{input type="password" value=password  class="form-control form-background-color p-4"}}
              </div>
              {{#if loginHasError}}
                <div class="validation-error-message pt-1 fade">
                  {{loginErrorMessage}}
                </div>
              {{/if}}
              <div class="form-check mt-5">
                {{input type="checkbox" name="remember" checked=remember class="form-check-input"}}
                <label>Remember me</label>
              </div>
              <button type="submit" class="btn btn-purple mt-5" {{action "login"}}>LOGIN</button>
              <!-- 	
                <div class="mt-5">
                  <button type="submit" class="btn btn-blue">LOGIN WITH FACEBOOK</button>
                  <button type="submit" class="btn btn-red">LOGIN WITH GMAIL</button>
                </div> 
              -->
              <div class="text-center mt-5 mb-4">
                {{#link-to "password-reset" class="nav-link"}}
                  Forgot Password?
                {{/link-to}}
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>