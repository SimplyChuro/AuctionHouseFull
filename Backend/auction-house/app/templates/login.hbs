<div class="container-fluid current-route-background">
  <div class="container">
    <p class="form-title-text">LOGIN</p>
  </div>
</div>

<div class="container-fluid pt-4">
  <div class="container">
    <div class="row mr-0 ml-0 pr-0 pl-0">
      <div class="col-0 col-sm-0 col-md-0 col-lg-2 col-xl-2"></div>
      <div class="col-12 col-sm-12 col-md-12 col-lg-8 col-xl-8 mr-0 ml-0 pr-0 pl-0 fade">
        <div class="card mr-0 ml-0 pr-0 pl-0 margin-card">
          <h1 class="card-title">LOGIN</h1>
          <div class="card-body mr-4 ml-4">
            <form autocomplete="off">
              <div class="form-group mt-4">
                <label class="account-profile-pointer" for="emailInput">Enter Email</label>
                {{input type="email" value=emailAddress class="form-control form-background-color p-4" id="emailInput"}}
              </div>
              <div class="form-group mt-5">
                <label class="account-profile-pointer" for="passwordInput">Password</label>
                {{input type="password" value=password  class="form-control form-background-color p-4" id="passwordInput"}}
                {{#if loginHasError}}
                  <div class="validation-error-message pt-1 fade">
                    {{loginErrorMessage}}
                  </div>
                {{/if}}
              </div>
              <div class="form-check mt-5">
                {{input type="checkbox" name="remember" checked=rememberMe class="form-check-input account-profile-pointer" id="rememberMe"}}
                <label class="account-profile-pointer" for="rememberMe">Remember me</label>
              </div>
              <button type="submit" class="btn btn-purple mt-5" {{action "login"}}>LOGIN</button>
              <div class="mt-5">
                <button type="submit" class="btn btn-blue" {{action "loginFacebook"}}>LOGIN WITH FACEBOOK</button>
                <button type="submit" class="btn btn-red" {{action "loginGmail"}}>LOGIN WITH GMAIL</button>
              </div>
              <div class="text-center mt-5 mb-4">
                {{#link-to "password-reset" class="nav-link"}}
                  Forgot Password?
                {{/link-to}}
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>