<div class="container-fluid current-route-background">
  <div class="container">
    <p class="form-title-text">REGISTER</p>
  </div>
</div>

<div class="container-fluid pt-4">
  <div class="container">
    <div class="row">
      <div class="col-xs-0 col-sm-0 col-md-0 col-lg-2 col-xl-2"></div>
      <div class="col-xs-12 col-sm-12 col-md-12 col-lg-8 col-xl-8 fade">
        <div class="card margin-card">
          <h1 class="card-title">REGISTER</h1>
          <div class="card-body mr-4 ml-4">
            <form autocomplete="off" method="POST">
              <div class="form-group mt-4">
                <label class="account-profile-pointer" for="nameInput">First Name</label>
                {{input type="text" value=name class="form-control form-background-color p-4" id="nameInput"}}
              </div>
              {{#if nameHasError}}
                <div class="validation-error-message fade">
                  {{nameErrorMessage}}
                </div>
              {{/if}}
              
              <div class="form-group mt-5">
                <label class="account-profile-pointer" for="lastNameInput">Last Name</label>
                {{input type="text" value=surname class="form-control form-background-color p-4" id="lastNameInput"}}
              </div>
              {{#if surnameHasError}}
                <div class="validation-error-message fade">
                  {{surnameErrorMessage}}
                </div>
              {{/if}}
              
              <div class="form-group mt-5">
                <label class="account-profile-pointer" for="emailInput">Enter Email</label>
                {{input type="email" autocomplete="off" value=email class="form-control form-background-color p-4" id="emailInput"}}
              </div>
              {{#if emailHasError}}
                <div class="validation-error-message fade">
                  {{emailErrorMessage}}
                </div>
              {{/if}}

              <div class="form-group mt-5">
                <label class="account-profile-pointer" for="emailRepeatInput">Confirm Email</label>
                {{input type="email" autocomplete="off"  value=emailConfirmation class="form-control form-background-color p-4" id="emailRepeatInput"}}
              </div>
              {{#if emailConfirmationHasError}}
                <div class="validation-error-message fade">
                  {{emailConfirmationErrorMessage}}
                </div>
              {{/if}}

              <div class="form-group mt-5">
                <label class="account-profile-pointer" for="passwordInput">Password</label>
                {{input type="password" autocomplete="off" value=password  class="form-control form-background-color p-4" id="passwordInput"}}
              </div>
              {{#if passwordHasError}}
                <div class="validation-error-message fade">
                  {{passwordErrorMessage}}
                </div>
              {{/if}}

              <div class="form-group mt-5">
                <label class="account-profile-pointer" for="passwordRepeatInput">Confirm Password</label>
                {{input type="password" autocomplete="off" value=passwordConfirmation  class="form-control form-background-color p-4" id="passwordRepeatInput"}}
              </div>              
              {{#if passwordConfirmationHasError}}
                <div class="validation-error-message fade">
                  {{passwordConfirmationErrorMessage}}
                </div>
              {{/if}}

              {{#if emailExistsHasError}}
                <div class="validation-error-message fade">
                  {{emailExistsErrorMessage}}
                </div>
              {{/if}}
              
              <button type="submit" class="btn btn-purple-outline mt-5" {{action "createUser"}}>REGISTER</button>
              <div class="text-center mt-5 mb-4">
                <span>Already have an account?  </span>
                {{#link-to "login" class="login-nav-link"}}
                  Login
                {{/link-to}}
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>